.products
	width 100%
	padding 0 0 50px
	position: relative
	z-index 1
	@media $sm-and-smaller
		padding 0
	&::after
		content ""
		position: absolute
		top 0
		left 0
		transform: translateY(-50%)
		width: 1570px;
		height: 248px;
		background-image: url(../img/content/back.jpg)
		background-repeat no-repeat
		background-size: cover
		background-position: center center
		@media $xl-and-smaller
			display none
	h2
		@extend .title
		padding-bottom 100px
		@media $xl-and-smaller
			padding 50px 0
		@media $sm-and-smaller
			padding 25px 0
	&--wrap
		width 100%
		background-image: url(../img/content/back.jpg)
		background-repeat no-repeat
		background-size: cover
		background-position: center center
	&__section
		width 100%
		margin-bottom 40px
		@media $md-and-smaller
			margin-bottom 20px
	&__mini
		width 100%
		display flex
		align-items: center
		border-radius: 10px
		padding-right 0
		background-color #fff
		cursor pointer
		filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
	&__thumb
		width: 25%
		height 100%
		display flex
		justify-content center
		align-items center
		img
			width: 100%
			height 100%
	&__price
		width 65%
		display flex
		justify-content space-between
		align-items center
		position: relative
		&::after
			content ""
			position: absolute
			top 49%
			left 0
			width 100%
			height 1px
			background-color #A99F84
		p
			font-family: 'Roboto Slab';
			font-style: normal;
			font-weight: 400;
			font-size: 32px;
			line-height: 42px;
			color: #625950;
			line-height 1
			position relative
			padding 0 20px 0 50px
			background-color #fff
			z-index 3
			@media $lg-and-smaller
				font-size: 22px	
				padding 0 20px
			@media $sm-and-smaller
				font-size 18px
			@media $xs-and-smaller
				padding 0 10px
	&__block
		@media $md-and-smaller
			display none
		span
			font-family: 'Open Sans';
			font-style: normal;
			font-weight: 600;
			font-size: 18px;
			line-height: 25px;
			color: #FF6B00;
			line-height 1
			position relative
			padding-left 20px
			background-color #fff
			z-index 3
			position relative
			display inline-block
			@media $sm-and-smaller
				font-size: 16px
		span:nth-child(2)
			font-size: 25px;
			padding-left 10px
			@media $sm-and-smaller
				font-size: 20px
				padding-left 5px
		span:nth-child(3)
			padding-left 10px
			@media $sm-and-smaller
				padding-left 5px
	&__icon
		width: 10%
		display flex
		justify-content center
		align-items center
		svg
			size(30px)
			fill #A99F84
			@media $md-and-smaller
				size (20px)
	&__section
		border-radius: 5px
		background-color #fff
		filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
		overflow hidden
	&__full
		width 100%
		display none
		cursor pointer
		.slider
			position relative
      .slide
				width: 100%
				height 100%
				display flex
				justify-content center
				align-items center
				img
					width: 100%
					height 100%
		.swiper-pagination
			font-family: 'Roboto Slab';
			font-style: normal;
			font-weight: 700;
			font-size: 24px;
			line-height: 32px;
			color: #625950;
			position absolute
			top 105%
			left 0
			@media $lg-and-smaller
				top 102%
				font-size: 18px
			@media $sm-and-smaller
				top 101%
		.navigation
			width: 100%;
			height: 74px;
			background: Gray;
			opacity: 0.3;
			margin 0
			@media $lg-and-smaller
				height 40px		
		.swiper_btn
			width 100%
			@media $lg-and-smaller
				position absolute
				top 92%
				left 0
			@media $sm-and-smaller
				top 95%
		.full__info
			width 100%
			height 100%
			cursor pointer
			padding 20px 20px 20px 40px
			@media $md-and-smaller
				padding 10px
			@media $sm-and-smaller
				padding-left 20px
			&__head
				width 100%
				padding 20px 0
				display flex
				justify-content space-between
				align-items center
				position: relative
				@media $xs-and-smaller
					padding 10px 0
				&::after
					content ""
					position: absolute
					top 49%
					left 0
					width 100%
					height 1px
					background-color #A99F84
					z-index 1
				p
					padding-right 20px
					font-family: 'Roboto Slab';
					font-style: normal;
					font-weight: 400;
					font-size: 32px;
					line-height: 42px;
					color: #625950;
					line-height 1
					position relative
					z-index 10
					background-color #fff
					@media $md-and-smaller
						font-size: 22px
					@media $xs-and-smaller
						font-size: 20px
			&__icon
				position relative
				z-index 10
				background-color #fff
				padding 0 20px
				svg
					transform rotate(180deg)
					size(30px)
					fill #A99F84
					@media $md-and-smaller
						size(20px)
			&__body
				width 100%
				padding-right 40px
				p.text
					font-family: 'Open Sans';
					font-style: normal;
					font-weight: 400;
					font-size: 20px;
					line-height: 30px;
					color: #625950;
					padding-top 40px
					@media $lg-and-smaller
						font-size: 16px
						padding-top 20px
						line-height 20px
					@media $md-and-smaller
						font-size: 14px
						padding-top 10px

.select
	width: 100%
	padding 40px 0
	@media $sm-and-smaller
		padding 20px 0
	&__block
		width: 100%
		padding-bottom 10px
		display flex
		justify-content space-between
		align-items center
		position relative
		&::after
			content ""
			position: absolute
			top 40%
			left 0
			width 100%
			height 1px
			background-color #A99F84
			z-index 1
	&__start
		background-color #fff
		padding-left 40px
		position relative
		z-index 2
		@media $xs-and-smaller
			padding-left 10px
	form
		label
			font-family: 'Roboto Slab';
			font-style: normal;
			font-weight: 400;
			font-size: 24px;
			line-height: 32px;
			color: #625950;
			padding-right 20px
			margin 0
			@media $lg-and-smaller
				font-size: 20px
			@media $xs-and-smaller
				font-size: 12px
				padding-right 5px
			input
				margin-right 10px
				@media $xs-and-smaller
					margin-right 5px
	&__price
		background-color #fff
		position relative
		z-index 2
		padding-right 40px
		@media $xs-and-smaller
			padding-right 20px
		span
			font-family: 'Open Sans';
			font-style: normal;
			font-weight: 600;
			font-size: 26px;
			line-height: 35px;
			color: #625950;
			padding-left 10px
			@media $lg-and-smaller
				font-size: 20px
			@media $xs-and-smaller
				padding-left 5px
				font-size: 12px
		span:nth-child(2)
			font-size: 18px;
			@media $xs-and-smaller
				font-size: 12px
		span:nth-child(4)
			color #FF6B00
		span:nth-child(5)
			color #FF6B00
			font-size: 18px;
			@media $xs-and-smaller
				font-size: 12px
	&__btn
		width 100%
		padding-top 40px
		display flex
		justify-content center
		align-items center
		@media $sm-and-smaller
			padding-top 20px
		
.down
	width: 100%
	background-image: url(../img/content/down.png)
	background-repeat no-repeat
	background-size: cover
	background-position: center center
	&__map
		width 100%
		img
			width 100%
			filter: drop-shadow(4px 0px 25px rgba(0, 0, 0, 0.25));
	&__content
		width 100%
		padding 80px 0 150px
		display flex
		flex-direction: column
		justify-content flex-start
		align-items center
		@media $xl-and-smaller
			padding 0
	h2
		@extend .title
		padding-bottom 22px
		@media $sm-and-smaller
			line-height 25px
	p
		font-family: 'Open Sans';
		font-style: normal;
		font-weight: 400;
		font-size: 26px;
		line-height: 35px;
		text-align: center;
		color #000
		@media $sm-and-smaller
			font-size 16px
	p:not(:nth-child(2))
		color #FF6B00
		padding-bottom 40px
		@media $sm-and-smaller
			padding-bottom 20px
	form
		width: 100%
		display flex
		justify-content space-between
		align-items flex-end
		@media $xs-and-smaller
			flex-direction: column
		label
			width 31%
			display block
			margin: 0
			padding 0
			@media $xs-and-smaller
				width 100%
				padding-bottom 10px
		input
			width: 100%;
			height: 50px;
			background: #FFFFFF;
			border: 1px solid #625950;
			border-radius: 5px;
			font-family: 'Open Sans';
			font-style: normal;
			font-weight: 600;
			font-size: 18px;
			line-height: 25px;
			color baseBlack
			padding 0 15px
			@media $sm-and-smaller
				font-size 14px
			&:placeholder
				color: #625950;
		button
			@extend .btn_header
			width 31%
			height: 50px
			box-shadow: none
			margin 0
			border: none
			@media $xs-and-smaller
				width 100%